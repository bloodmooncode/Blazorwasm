@inject AppStateService AppState

<div class="w-auto">
  <nav class="bg-white shadow-sm">
    <div class="container-fluid">
      <div class="d-flex align-items-center justify-content-between" style="height: 4rem;">
        <div class="d-flex w-100" @onclick="ToggleDrawer">
          <i class="bi-list" style="font-size: 2rem; color: cornflowerblue;"></i>
        </div>

        <!-- Search -->
        <div class="d-none d-sm-flex align-items-center me-3">
          <div class="d-flex p-2 bg-purple rounded-circle p-2 justify-content-center align-items-center me-3" style="width: 2.5rem; height:2.5rem" >
            <p class="fs-4 fw-bold text-blue m-0">
              Y
            </p>
          </div>
          <!-- Profile dropdown -->
          <div class="dropdown ml-3" style="position: relative;">
            @* <button @onclick="ToggleDropDown" class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="margin: 0 auto;">
              YOUR NAME
            </button> *@
            <a @onclick="ToggleDropDown" class="cursor-pointer dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="margin: 0 auto;">YOUR NAME</a>
            @if (!isCollapsed) {
              <div style="position: absolute; top: 100%; background: white;" class="shadow-sm bg-body-tertiary rounded-2 mt-2">
                <a class="dropdown-item pb-2" href="#">Your Profile</a>
                <a class="dropdown-item pb-2" href="#">Settings</a>
                <a class="dropdown-item pb-2" href="#">Sign out</a>
              </div>
            }
          </div>
        </div>

        <div class="d-flex d-sm-none">
          <!-- Mobile menu button -->
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="collapse navbar-collapse" id="navbarToggler">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item active">
          <a class="nav-link" href="#">News</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Microgrids</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">About</a>
        </li>
      </ul>
    </div>
  </nav>
</div>


@code {
  private bool isCollapsed = true;
  public bool open = true;

  public void ToggleDropDown()
  {
    isCollapsed = !isCollapsed;
  }

  public void ToggleDrawer()
  {
      open = !open;
      AppState.IsDrawerOpen = open;
  }
}