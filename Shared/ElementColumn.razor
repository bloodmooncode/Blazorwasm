@inject NavigationManager NavigationManager

<h2 class="mt-3">Properties Panel</h2>

<p>Element Name : @Elements[DrawerIndex].name</p>
<p>Element Type : @Elements[DrawerIndex].type</p>

<table class="table table-striped">
    <thead>
        <tr>
            @foreach (var h in headings)
            {
                <th>@h</th>
            }
        </tr>
    </thead>

    <tbody>
        @foreach (var (price, index) in @Elements[DrawerIndex].SellingPower.Select((price, index) => (price, index)))
        {
            <tr class="align-middle">
            <td>
                <div>@index</div>
            </td>
            <td>
                <div>@price</div>
            </td>
            </tr>
        }  
    </tbody>
</table>

<div class="text-center" style="color: #3b0fdb; cursor: pointer;" @onclick="jumptoDash">Go to the Visual Panel</div>

@code {
    [Parameter]
    public int DrawerIndex { get; set; }
    [Parameter]
    public List<Element> Elements { get; set; }

    string[] headings = {"Time", "Value"};
    
    protected void jumptoDash() {
        NavigationManager.NavigateTo("/dashboard");
    }
}